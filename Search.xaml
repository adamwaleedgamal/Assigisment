      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registeration___Login_Desktop_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid Background="White">
        <Label Content="City :" HorizontalAlignment="Left" Margin="60,75,0,0" VerticalAlignment="Top" FontSize="24" Width="92"/>
        <Button  Style="{StaticResource Button}" x:Name="Serach_but" Content="Search" HorizontalAlignment="Left" Margin="536,85,0,0" VerticalAlignment="Top" Height="25" Width="154" Click="Serach_but_Click"/>
        <TextBox  Style="{StaticResource text_box}" x:Name="Citysearch_txt" HorizontalAlignment="Left" Margin="200,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265" FontSize="20"/>
        <DataGrid x:Name="gg"  Margin="0,235,0,0"/>
    </Grid>
</Page>
